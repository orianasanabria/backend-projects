<h2 class="display-5">Product List</h2>
  <div class="mt-3">
    {{#if products}}
          <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
                <tr>
                  <td>{{this.title}} </td>
                  <td>{{this.price}} </td>
                  <td><img src="{{this.thumbnail}}" alt="image" width="70px"/></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
      {{else}}
          <div class="alert alert-dark" role="alert">
            There's nothing here.
          </div>
    {{/if}}
  </div>